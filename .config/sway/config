font pango:SF Mono 10

set $output_main DP-3
set $output_top HDMI-A-1
set $output_right DP-1

output $output_main pos 0 1080 res 1920x1080@144Hz bg /home/c/Pictures/wallpaper.png fill max_render_time 3 adaptive_sync on
output $output_right pos 1920 1080 res 1920x1080 bg /home/c/Pictures/wallpaper.png fill max_render_time 3
output $output_top pos 0 0 res 1920x1080 bg /home/c/Pictures/wallpaper.png fill max_render_time 3

bar {
        swaybar_command waybar
}

input "9610:51:Glorious_Model_D" {
    accel_profile flat
    pointer_accel 0
}

seat * hide_cursor 3000

set $lock 'swaylock --indicator --screenshot --grace 5 --effect-pixelate 30 --clock --inside-color 00000000 --ring-color 00000000 --line-color 00000000 --indicator-radius 150 --text-color ffffffff'

exec swayidle -w \
         timeout 600 $lock \
         timeout 900 'swaymsg "output * dpms off"' \
         timeout 15 'if pgrep -x swaylock; then swaymsg "output * dpms off"; fi' \
         resume 'swaymsg "output * dpms on"' \
         before-sleep $lock

for_window [class="^.*"] inhibit_idle fullscreen
for_window [app_id="^.*"] inhibit_idle fullscreen

default_border none
gaps inner 10
gaps outer 15
smart_gaps on

set $up k
set $down j
set $left h
set $right l

set $mod Mod4
floating_modifier $mod

bindsym $mod+Return exec alacritty
